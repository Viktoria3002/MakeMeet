<% content_for :title, "Вход в админку - Make Meet" %>

<div class="admin-login-section">
  <div class="admin-login-card">
    <h1 class="admin-login-title">Вход в админку</h1>
    <%= form_tag admin_login_path, method: :post, class: "admin-login-form" do %>
      <div class="form-group">
        <label class="form-label">Логин</label>
        <%= text_field_tag :username, nil, class: "form-input", placeholder: "Введите логин" %>
      </div>
      <div class="form-group">
        <label class="form-label">Пароль</label>
        <%= password_field_tag :password, nil, class: "form-input", placeholder: "Введите пароль" %>
      </div>
      <% if flash[:alert] %>
        <div class="alert alert-danger"><%= flash[:alert] %></div>
      <% end %>
      <%= submit_tag "Войти", class: "admin-login-submit" %>
    <% end %>
  </div>
</div>

