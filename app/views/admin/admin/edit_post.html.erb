<% content_for :title, "Редактировать пост - Админ панель" %>

<div class="admin-container">
  <div class="admin-header">
    <h1>✏️ Редактировать пост</h1>
  </div>

  <%= form_with model: [:admin, @post], url: admin_update_post_path(@post), method: :patch, local: true do |f| %>
    <div class="form-group">
      <%= f.label :content, "Содержание поста", class: "form-label" %>
      <%= f.text_area :content, class: "form-input", rows: 8, required: true, style: "resize: vertical;" %>
    </div>

    <div class="form-group">
      <%= f.label :author_id, "Автор", class: "form-label" %>
      <%= f.collection_select :author_id, @users, :id, :username, {}, { class: "form-input" } %>
    </div>

    <div style="display: flex; gap: 10px; margin-top: 30px;">
      <%= f.submit "Сохранить изменения", class: "admin-login-submit" %>
      <%= link_to "Отмена", admin_posts_path, class: "btn", style: "background: rgba(255, 255, 255, 0.1); color: rgba(255, 255, 255, 0.7);" %>
    </div>
  <% end %>
</div>

